<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (locals.accountData) { %>
      <!-- Shown only when logged in -->
      <a href="/account/manage" title="Go to your account">Welcome <%= accountData.account_firstname %></a>
      <a href="/account/logout" title="Click to log out">Logout</a>
    <% } else { %>
      <!-- Shown only when not logged in -->
      <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>

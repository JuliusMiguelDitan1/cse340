<main class="manage-page">
  <h1><%= title %></h1>

  <!-- Flash messages -->
  <% if (messages && messages.notice) { %>
    <ul class="flash">
      <% messages.notice.forEach(function(msg) { %>
        <li><%= msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <!-- Greeting -->
  <h2>Welcome <%= accountData.account_firstname %></h2>

  <!-- Dashboard links -->
  <div class="dashboard-links">
    <!-- âœ… Fixed route -->
    <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>

    <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
      <a href="/inv">Inventory Management</a>
    <% } %>
  </div>
</main>

<body>
  <main>
    <h1>Add New Classification</h1>

    <!-- Flash message -->
    <% if (messages && messages.notice) { %>
      <div class="flash"><%= messages.notice %></div>
    <% } %>

    <!-- Validation Errors -->
    <% if (errors) { %>
      <ul class="notice">
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>

    <form action="/inv/add-classification" method="post" id="addClassificationForm">
      <label for="classification_name">Classification Name</label>
      <input 
        type="text" 
        id="classification_name" 
        name="classification_name" 
        required 
        pattern="^[A-Za-z0-9]+$" 
        title="No spaces or special characters allowed"
      >

      <button type="submit">Add Classification</button>
    </form>
  </main>

  <script src="/js/script.js"></script>
</body>

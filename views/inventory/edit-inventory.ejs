<h1>Edit Inventory</h1>

<!-- Flash message -->
<% if (messages && messages.notice && messages.notice.length > 0) { %>
  <ul class="flash">
    <% messages.notice.forEach(msg => { %>
      <li><%= msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Validation errors -->
<% if (errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/update" method="POST" id="updateForm">
  
  <!-- Hidden inventory ID -->
  <input type="hidden" name="inv_id" value="<%= inv_id %>">

  <!-- Classification dropdown -->
  <label for="classification_id">Classification</label>
  <%- classificationSelect %>

  <!-- Vehicle Inputs (sticky values) -->
  <label for="inv_make">Make</label>
  <input type="text" id="inv_make" name="inv_make" required
    value="<%= inv_make ? inv_make : '' %>">

  <label for="inv_model">Model</label>
  <input type="text" id="inv_model" name="inv_model" required
    value="<%= inv_model ? inv_model : '' %>">

  <label for="inv_year">Year</label>
  <input type="number" id="inv_year" name="inv_year" min="1900" max="2099" required
    value="<%= inv_year ? inv_year : '' %>">

  <label for="inv_description">Description</label>
  <textarea id="inv_description" name="inv_description" required><%= inv_description ? inv_description : '' %></textarea>

  <label for="inv_image">Image Path</label>
  <input type="text" id="inv_image" name="inv_image"
    value="<%= inv_image ? inv_image : 'images/vehicles/no-image.png' %>">

  <label for="inv_thumbnail">Thumbnail Path</label>
  <input type="text" id="inv_thumbnail" name="inv_thumbnail"
    value="<%= inv_thumbnail ? inv_thumbnail : 'images/vehicles/no-image.png' %>">

  <label for="inv_price">Price</label>
  <input type="number" id="inv_price" name="inv_price" min="0" step="0.01" required
    value="<%= inv_price ? inv_price : '' %>">

  <label for="inv_miles">Miles</label>
  <input type="number" id="inv_miles" name="inv_miles" min="0" required
    value="<%= inv_miles ? inv_miles : '' %>">

  <label for="inv_color">Color</label>
  <input type="text" id="inv_color" name="inv_color" required
    value="<%= inv_color ? inv_color : '' %>">

  <button type="submit" disabled>Update Vehicle</button>
</form>

<script src="/js/inv-update.js"></script>

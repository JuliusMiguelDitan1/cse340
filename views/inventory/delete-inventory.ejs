<h1>Delete Inventory</h1>

<!-- Flash message -->
<% if (messages && messages.notice && messages.notice.length > 0) { %>
  <ul class="flash">
    <% messages.notice.forEach(msg => { %>
      <li><%= msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Validation errors -->
<% if (errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<p>Confirm Deletion - The delete is permanent.</p>

<form action="/inv/delete" method="POST" id="deleteForm">

  <!-- Hidden inventory ID -->
  <input type="hidden" name="inv_id" value="<%= inv_id %>">

  <!-- Vehicle Information -->
  <label for="inv_make">Make</label>
  <input type="text" id="inv_make" name="inv_make" readonly value="<%= inv_make %>">

  <label for="inv_model">Model</label>
  <input type="text" id="inv_model" name="inv_model" readonly value="<%= inv_model %>">

  <label for="inv_year">Year</label>
  <input type="number" id="inv_year" name="inv_year" readonly value="<%= inv_year %>">

  <label for="inv_price">Price</label>
  <input type="number" id="inv_price" name="inv_price" readonly value="<%= inv_price %>">

  <button type="submit" class="delete-btn">Delete Vehicle</button>
</form>

<!-- views/inventory/detail.ejs -->
<%- include("../partials/head") %>
<title><%= inv.inv_make %> <%= inv.inv_model %> Details</title>
</head>
<body>
  <%- include("../partials/header") %>
  <main id="inv-detail">
    <h1><%= inv.inv_make %> <%= inv.inv_model %></h1>
    <section class="vehicle-detail">
      <figure class="vehicle-image">
        <img src="<%= inv.inv_image %>" 
             alt="Image of <%= inv.inv_make %> <%= inv.inv_model %>">
      </figure>
      <div class="vehicle-info">
        <h2><%= inv.inv_year %> <%= inv.inv_make %> <%= inv.inv_model %></h2>
        <p><strong>Price:</strong> 
          <%= new Intl.NumberFormat("en-US", { style: "currency", currency: "USD" }).format(inv.inv_price) %>
        </p>
        <p><strong>Mileage:</strong> 
          <%= new Intl.NumberFormat("en-US").format(inv.inv_miles) %> miles
        </p>
        <p><strong>Color:</strong> <%= inv.inv_color %></p>
        <p><strong>Description:</strong> <%= inv.inv_description %></p>
      </div>
    </section>
  </main>
  <%- include("../partials/footer") %>
</body>
</html>


  <main id="inv-detail">
    <h1><%= inv.inv_make %> <%= inv.inv_model %></h1>
    <section class="vehicle-detail">
      <figure class="vehicle-image">
        <img src="<%= inv.inv_thumbnail %>" 
             alt="Image of <%= inv.inv_make %> <%= inv.inv_model %>">
      </figure>
      <div class="vehicle-info">
        <h2><%= inv.inv_year %> <%= inv.inv_make %> <%= inv.inv_model %></h2>
        <p><strong>Price:</strong> $<%= Number(inv.inv_price).toLocaleString() %></p>
        <p><strong>Mileage:</strong> <%= Number(inv.inv_miles).toLocaleString() %> miles</p>
        <p><strong>Color:</strong> <%= inv.inv_color %></p>
        <p><strong>Description:</strong> <%= inv.inv_description %></p>
      </div>
      <form action="/cart/add" method="post">
      <input type="hidden" name="inv_id" value="<%= inv.inv_id %>">
      <label for="quantity">Quantity:</label>
      <input type="number" id="quantity" name="quantity" value="1" min="1" required>
      <button type="submit">Add to Cart</button>
      </form>
    </section>
